{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client",
    "node_modules",
    "vite.config.ts",
    "server/vite.ts",
    "server/replit_integrations/**"
  ]
}
